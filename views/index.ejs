<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Código de Trânsito Brasileiro (CTB) - Home</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Inter:wght@400;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/ctb.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="search-box">
        
        <div class="input-container">
          <form action="/<%= route %>/search" method="get" id="searchForm">
                <input type="text" name="q" id="searchInput" placeholder="Digite sua busca" value="<%= typeof query !== 'undefined' ? query : '' %>">
                <button class="search-btn" id="search-btn"><i class="fas fa-search"></i></button>
                <button class="clear-btn" id="clearSearchButton"><i class="fas fa-times"></i></button>
            </form>
        </div>
    
    </div>


  <div id="content">
    <%- renderedContent %>
  </div>
  <script src="/script/collapsible.js"></script>
</body>
</html>